import sys

de_port=80

def divide_url(url):
    if url.startswith("http://"):
    
        url = url[7:]
        port = de_port
    
        if '/' in url:
            host_port, path = url.split('/',1)
            path = '/' + path
        else: 
            host_port = url
            path = "/"
        if ':' in host_port:
            host, portstr = host_port.split(":",1)
            if portstr.isdigit():
                port = int(portstr)
            else:
                print("Error Code")
        else:
            host = host_port
            port = de_port
    else:
        print("Error Code")
    return host, port, path
